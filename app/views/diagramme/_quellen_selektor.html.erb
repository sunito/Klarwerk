<%= javascript_include_tag :defaults %>
<%= stylesheet_link_tag "table.css" %>

<style type="text/css">
  <% Quelle.all.each do |q| %>
    option.farbe<%= q.id %>  {
        color: #<%= q.farbe %>;
        background-color: #ffffff;
    }
  <% end %>
</style>

<%= @diagramm.inspect %>
<%= form_for(@diagramm, :html => {:name => "qual_der_wahl", :onsubmit => "MarkiereErgebnisse()"}) do |f| %>
<!-- Errormessages Ausblenden wenn leer -->
  <% if @diagramm.errors.full_messages != []%>
    <%= @diagramm.errors.full_messages %>
  <%end%>
  
  <TABLE width="66%" style="border: solid 3px gray; border-bottom-left-radius: 6px; border-bottom-right-radius: 6px">
    <CAPTION>Name und Beschreibung des Diagrammes </CAPTION>      
    <TR>
      <TD width="33%" VAlign="top">
        <%= f.label :name %><br />
        <%= f.text_field :name %><BR>
      </TD>
      <TD width="66%" VAlign="top">
        <%= f.label :beschreibung %><br />
        <%= f.text_field :beschreibung,:cols=>50,:rows=>3 %>
      </TD>
    </TR>
    <TR>
      <TD width="100%" colspan ="2" VAlign="top">
        <TABLE width="100%" style="border: solid 3px gray; border-bottom-left-radius: 6px; border-bottom-right-radius: 6px">
          <CAPTION>Wahl der darzustellenden Messgr&ouml;&szlig;en</CAPTION>  
          <TH width="50%">
            <B>Deaktiviert</B>
          </TH>
          <TH>
            <B>Akiviert</B>
          </TH> 
          <TR>
            <TD WIDTH="100%" colspan ="2">
              <DIV id="quellen_auswahl_listen">
                <%= render :partial => "quellen_auswahl_listen" %>
              </DIV>
            </TD>
          </TR>
        </TABLE>
      </TD>
    </TR>
  </TABLE>
<%= f.submit "Speichern" %>
<!--%= submit_tag("Abbrechen", { :name => 'reset', :id => 'reset_button', :type => "reset",:onclick=>"window.location.reload()"}) %-->
<% end %>
