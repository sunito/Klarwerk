<%  fields_for @diagramm do |f| %>
  <TABLE BGCOLOR="#EEEEEE" WIDTH="100%" Border="1" CELLPADDING=5 CELLSPACING=1><TR>
    <TD BGCOLOR="#FFFFF3" WIDTH="50%" Valign="top">
      <% @freie_quellen.each do |quelle| %>
        <font color="#<%=  quelle.farbe %>"><%=h quelle.name %></font>
        <%= link_to_remote ">>",  :url =>quelle_rein_path(@diagramm.id, quelle.id), :update => "quellen_auswahl_listen" %>
      <BR>
      <% end %>
    </TD>
    <TD BGCOLOR="#FFFFF3" WIDTH="50%" Valign="top">
      <% @ausgewaehlte_diaquen.each do |diaque| %>
      <% f.fields_for :diaquen,  diaque do |diaque_f| %>
        <table><tr>
          <td>
            <%= link_to_remote "<<", :url => quelle_raus_path(@diagramm.id, diaque.quelle_id), :update => "quellen_auswahl_listen" %>
          </td><td width="62">
            <%= diaque_f.picky_color :farbe, :size => 6, :default => diaque.quelle.farbe, :type => "hidden" %><br>
          </td><td>
            <font color="#<%=  diaque.farbe %>"><%=h diaque.quelle.name %></font>
          </td>
        </tr></table>
      <BR>
      <% end %>
      <% end %>
    </TD>
  </TR></TABLE>
<% end %>