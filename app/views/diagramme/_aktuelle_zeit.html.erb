
<div id="aktuelle_zeit">
  <TABLE width="100%">
    <TR>
      <TD align="center">
        <% dauern = navi_dauern(session[:akt_zeit]) %>
        <% dauern.each do |dauer| %>

            <% if session[:akt_zeit].dauer == dauer then %>
              <font size="+2"> &nbsp; <%= session[:akt_zeit].lesbar %> &nbsp; </font>
            <% elsif dauer.nil? then %>
              &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
            <% else %>
              &nbsp; <%= link_to_remote dauer_lesbar(dauer), :url => url_for({ :action => "dauer", :id => params[:id], :dauer => dauer, :format => "js" }) %> &nbsp;
          <% end %>
        <% end %>
      </TD>
      <TD valign="top" width="10%" align="right">
      </TD>
      <TD  valign="top" width="30%"  align="center">
        <%= link_to_remote image_tag("arrow_left3.png",  :class => "navi_button"), :url => url_for({ :action => "links", :id => params[:id], :format => "js" }) %> <!--edit_kurve_path(@kurve) % | -->
        <%= link_to_remote image_tag("arrow_right3.png", :alt => 'nach rechts',  :class => "navi_button"), :url => url_for({ :action => "rechts", :id => params[:id], :format => "js" }) %>
      </TD>
      <TD WIDTH="5%">
      </TD>
    </TR>
  </TABLE>
</div>