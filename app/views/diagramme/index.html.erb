<h1 style="text-align: center;">Diagramm-Liste <i class="material-icons medium">trending_up</i></h1>

<TABLE class="striped">
  <thead>
    <TR class="listenkopf">
      <th>Name </th>
      <th> Messgr&ouml;&szlig;en </th>
       <% if session[:expert_modus] then %>
      <th> &nbsp; </th>
      <th> &nbsp; </th>
      <% end %>
      <th> Beschreibung </th>
    </TR>
  </thead>
<% for diagramm in @diagramme %>
  <tr  class="<%= cycle('', 'un') + 'gerade'%>">
    <td  ><%= link_to diagramm.name, showfix_path(diagramm) %></td>
    <!--td  ><%=h diagramm.quellen.map(&:name).join(', ')%></td-->
    <td  ><%=raw diagramm.quellen.map{|q| ("<font color=\"##{q.farbe}\">#{q.name}</font>")}.join(', ')%></td>
    <% if session[:expert_modus] then %>
      <td  ><%= link_to 'bearbeiten', edit_diagramm_path(diagramm) %></td>
      <td  ><%= link_to raw('l&ouml;schen'), diagramm, :confirm => raw('Wollen Sie wirklich L&ouml;schen? Dann klicken Sie auf OK'), :method => :delete %></td>
    <% end %>
     <td ><%=h diagramm.beschreibung %></td>
 </tr>
<% end %>
</TABLE>

<br>
<% if session[:expert_modus] then %>
<%= link_to 'Neues Diagramm', new_diagramm_path %>
<% end %>
