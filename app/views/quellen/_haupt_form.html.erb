<%= javascript_include_tag :defaults %>

<%= javascript_include_tag 'picky_color' %>
<%= stylesheet_link_tag 'picky_color' %>

<%= simple_form_for(@quelle) do |f| %>
<% if @quelle.errors.full_messages != []%>
  <%= @quelle.errors.full_messages %>
  <% end %>

<script type="text/javascript">
//  $ -> $('input[type=text]').minicolors()  
</script>
  
<table  class="listenkopf">
  <tr><td>
    <%= f.label :adresse %></td><td>
    <%= f.text_field :adresse %>
  </td></tr>
  <tr><td>
    <%= f.label :name %></td><td>
    <%= f.text_field :name %>
  </td></tr>
  <tr><td>
    <%= f.label :farbe %></td><td>
    <!--%= f.input :farbe, collection: {green: '#7bd148',  bold_blue:  '#5484ed'}, selected: '#7bd148' %-->
    <%= f.input :farbe_mit_raute, as: :minicolors, label: '.' %>
    <!--%= f.minicolors :farbe_mit_raute %-->
    <!--%= raw(f.picky_color :farbe, :size => 6) %-->
  </td></tr>
  <tr><td>
    <%= f.label :variablen_art %></td><td>
    <%= f.text_field :variablen_art %>
  </td></tr>
  <tr><td>
    <%= f.label :Beschreibung %></td><td>
    <%= f.text_field :beschreibung %>
  </td></tr>
  <tr><td>
    <% einheiten_auswahl = Einheit.find(:all).map {|einheit| [einheit.name, einheit.id]}  %>
    <%= f.label :einheit %></td><td>
    <%= f.select("einheit_id", einheiten_auswahl) %>
  </td></tr>
  <tr><td>
    <%= f.label :aktiv %></td><td>
    <%= f.check_box :aktiv %>
  </td></tr>
</table>
  <P><%= f.submit knopf_text %></P>
    
<% end %>

