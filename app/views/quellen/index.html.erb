<h1 style="text-align: center;">Messgr&ouml;&szlig;en <i class="material-icons medium">input</i></h1>

<TABLE class="striped">
  <thead>
    <tr class="listenkopf">
      <th>Adresse</th>
      <th>Name</th>
      <th>Typ</th>
      <th>Einheit</th>
      <th>Aktiv</th>
      <th></th>
      <th></th>
      <th>Beschreibung</th>
    </tr>
  </thead>
<% [@aktive_quellen, @inaktive_quellen].each do |quellen_array| %>
  <% for quelle in quellen_array %>
    <tr  class="<%= cycle('', 'un') + 'gerade'%>">
      <%  if quelle %>
      <td><%=h quelle.adresse %></td>
      <td><font color="#<%=quelle.farbe%>"><%=h quelle.name %></font></td>
      <td><%=h quelle.variablen_art %></td>
      <td><%=h quelle.einheit && quelle.einheit.name %></td>
      <td><%=h quelle.aktiv ? "ja" : "nein" %></td>
      <td><%= link_to (quelle.aktiv ? "de" : "")+"aktivieren", aktiv_umschalten_path(quelle.id) %></td>
      <td><%= link_to 'bearbeiten', edit_quelle_path(quelle) %></td>
      <td><%=h quelle.beschreibung %></td>
      <% end %>
    </tr>
  <% end %>
  <tr><td colspan=9><hr size=3></td></tr>
<% end %>
</table>

<br />

<%= link_to raw('Neue Messgr&ouml;&szlig;e'), new_quelle_path %>
