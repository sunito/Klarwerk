<h1>Listing messpunkte</h1>

<table>
  <tr>
    <th>Zeit</th>
    <th>Wert</th>
    <th>Messgröße</th>
  </tr>

<% for messpunkt in @messpunkte %>
  <tr>
    <td><%=h messpunkt.zeit %></td>
    <td><%=h messpunkt.wert %></td>
    <td><%=h messpunkt.quelle_id %></td>
    <td><%= link_to 'Show', messpunkt %></td>
    <td><%= link_to 'Edit', edit_messpunkt_path(messpunkt) %></td>
    <td><%= link_to 'Destroy', messpunkt, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New messpunkt', new_messpunkt_path %>
